{% extends 'base.html.twig' %}

{% block title %}Todo{% endblock %}

{% block body %}
    <h1>Todo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todo.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ todo.category }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ todo.description }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ todo.priority }}</td>
            </tr>
            <tr>
                <th>Due date</th>
                <td>{{ todo.dueDate ? todo.dueDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ todo.createDate ? todo.createDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {# <a href="{{ path('app_todo_index') }}">back to list</a> #}

    <a href="{{ path('app_todo_edit', {'id': todo.id}) }}" class="btn btn-warning m-1">Edit</a>

    {{ include('todo/_delete_form.html.twig') }}
{% endblock %}
